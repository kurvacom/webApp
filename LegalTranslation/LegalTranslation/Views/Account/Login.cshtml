﻿@using LegalTranslation.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Вход";
}
<br>

<div class="row adminbody-custom">
    <div class="col-md-6 offset-3">
        <p>
            <h4>Вход в системата</h4>
        </p>
        @if(TempData["AlertMessageRed"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Опитайте отново! </b> @TempData["AlertMessageRed"]</span>
            </div>
        }
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">E-mail</label>
                        <input asp-for="Email" class="form-control" type="email" required>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Парола</label>
                        <input asp-for="Password" class="form-control" type="password" required>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <br>

                    <div class="form-group">
                        <input class="btn btn-outline-success float right greenbtn-custom" type="submit" value="Влизане" />
                        <a class="btn btn-outline-secondary graybtn-custom" asp-controller="Home" asp-action="Index">Назад</a>
                        <a class="btn btn-outline-secondary bluebtn-custom" asp-controller="Account" asp-action="ForgottenPassword">Забравена парола</a>
                    </div>
                </form>
                <br>
            </div>
        </div>
    </div>
</div>

<br>